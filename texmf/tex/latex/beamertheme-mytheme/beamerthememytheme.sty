\setbeamertemplate{footline}{
  \ifnum \insertframenumber=1
  \else
  {\centering
  \begin{tikzpicture}
    \foreach \i in {1,...,\inserttotalframenumber} {
      \ifnum\i<\insertframenumber
        \node [rounded rectangle, minimum width=12pt,fill=PreviousColor] at (12pt*\i,0) {};
      \else
        \ifnum\i=\insertframenumber
          \node [rounded rectangle, minimum width=12pt,fill=CurrentColor] at (12pt*\i,0) {};
        \else
          \node [rounded rectangle, minimum width=12pt,fill=NextColor] at (12pt*\i,0) {};
        \fi
      \fi
    }
  \end{tikzpicture}\par\vspace{4pt}}
  \fi
}
